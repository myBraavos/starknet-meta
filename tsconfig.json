{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
